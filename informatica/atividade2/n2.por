programa {
  funcao inicio() {
    //
    inteiro n

    //
    escreva("digite um numero inteiro positivo ou negativo: ")
    leia(n)

    //
    se (n > 0 ){
      escreva("seu numero e positivo")
    }
    senao se (n < 0){
      escreva("seu numero e negativo")
    }
    senao {
      escreva("seu numero e zero")
    }

  }
}
